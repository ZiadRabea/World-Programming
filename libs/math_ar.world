دالة سجل(قاعدة, رقم)
#	
#	#تفادي حالات حدوث الخطأ
#	
	اذا قاعدة < 1 نفذ طباعة("قاعدة غير معرفة لللوغريتم")
	اذا رقم < 1 نفذ طباعة("رقم غير معرف لللوغريتم")
	متغير النتيجة = 0	
	# المنطق
	بينما رقم >= قاعدة نفذ 
		متغير رقم = رقم/قاعدة
		متغير النتيجة = النتيجة + 1
	نهاية
	اذا رقم != 1 نفذ متغير النتيجة = النتيجة + باقي(رقم, قاعدة)
	ارجاع النتيجة
نهاية

